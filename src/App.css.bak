
.grid{
	display: grid;
	grid-template-columns: 30% 30% 30%; 
	max-width: 500px;
	gap: 15px;
	margin: 0 auto;
	box-shadow: 0px 0px 30px gray;
	padding: 15px;
	border-radius: 15px;
	max-height: 60vh;
	overflow: auto;
}

h3{
	grid-column-start: 1;
	grid-column-end: 4;
	text-align: center;
	background-color: green;
	color: white;
}

.head{
	margin: 80px auto 30px auto;
	max-width: 600px;
	box-shadow: 2px 3px 4px gray;
}
button{
	border: none;
	padding: 5px;
	border-radius: 10px;
	cursor: pointer;
}
.done{
	background-color: lightblue;
	opacity: .8;
}
.delete{
	background-color: red;
	opacity: .7;
	color: white;
}