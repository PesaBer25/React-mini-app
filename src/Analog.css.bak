body{
	margin: 0;
	padding: 0;
}
.frame{
	height: 100vh;
	background-color: gray;
	display: flex;
	justify-content: center;
	align-items: center;
}
.outer{
	width: 400px;
	height: 400px;
	border-radius: 50%;
	box-shadow: 0px 0px 30px black;
	background-color: rgba(0,0,0,0.4);
	position: relative;
}

.outer span{
	position: absolute;
	font-size: 20px;
	transform: rotate(calc(30deg * var(--i)));
	inset: 10px;
	text-align: center;
	color: white;
}

.outer span b{
	transform: rotate(calc(-30deg * var(--i)));
	display: inline-block;
}
.center{
	height: 10px;
	width: 10px;
	background-color: orange;
	border-radius: 50%;
	position: relative;
	top: 48.4%;
	left: 48.4%;
}
.wrapper{
	width: 300px;
	height: 300px;
	position: absolute;
	top: 12%;
	left: 12%;
	display: flex;
	border-radius: 50%;
}

hr{
	height: 48%;
	border-radius: 30%;
}
.sec hr{
	border: 1px solid white;
}
.min{
	height: 270px;
	width: 270px;
	top: 16%;
	left: 16%;
}
.min hr{
	border: 1px solid lightblue;
}
.hr{
	height: 200px;
	width: 200px;
	top: 26%;
	left: 23%;
}
.hr hr{
	border: 1px solid red;
}
label{
	color: orange;
	position: absolute;
	top: 40%;
}